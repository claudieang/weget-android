<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    app:cardUseCompatPadding="true">

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="76dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:id="@+id/cv2"
    android:padding="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/request_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Product Name"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/fulfillers_btn"/>

        <TextView
            android:id="@+id/request_requirement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product details"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:paddingBottom="4dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/fulfillers_btn"/>


        <RelativeLayout
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/fulfillers_btn"
            android:clickable="true"
            android:focusable="false"
            android:layout_centerVertical="true"
            android:foreground="?selectableItemBackgroundBorderless"
            android:background="@drawable/background_border">

            <TextView
                android:id="@+id/fulfiller_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:padding="9dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:text="0"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/fulfiller_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_alignRight="@id/fulfiller_number"
                android:layout_margin="10dp"
                android:layout_marginTop="3dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:background="@drawable/ic_account_circle_black_36dp" />

        </RelativeLayout>

        <!--<ImageButton-->
        <!--android:layout_width="20dp"-->
        <!--android:layout_height="20dp"-->
        <!--android:id="@+id/imageButton"-->
        <!--android:background="@drawable/roundcorner"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_marginRight="16dp"-->
        <!--/>-->

    </RelativeLayout>

</android.support.v7.widget.CardView>