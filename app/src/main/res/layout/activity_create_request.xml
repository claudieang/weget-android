<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wegot.fuyan.fyp.CreateRequestActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/relativeLayout1"
        android:background="@drawable/requestbg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Request"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/tv_request_title"
            android:textSize="40dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/relativeLayout1"
    android:background="#e8e8e8">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Product Name"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textColorHint="#BCBCBC"
        android:singleLine="true"
        android:id="@+id/product_name_txt"
        android:background="@drawable/barbase"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Requirement"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textColorHint="#BCBCBC"
        android:singleLine="true"
        android:id="@+id/product_requirement_txt"
        android:background="@drawable/barbase"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:hint="Postal"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textColorHint="#BCBCBC"
        android:singleLine="true"
        android:id="@+id/postal_code_txt"
        android:background="@drawable/barbase"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/get_address_btn"
        android:background="@drawable/location"
        android:layout_alignTop="@+id/postal_code_txt"
        android:layout_toEndOf="@+id/postal_code_txt" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/address_line_txt"
        android:hint="Address"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textColorHint="#BCBCBC"
        android:background="@drawable/barbase"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/request_duration_txt"
        android:hint="Duration (Minutes)"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textColorHint="#BCBCBC"
        android:background="@drawable/barbase"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="numberDecimal|numberSigned"
        android:ems="10"
        android:id="@+id/request_price_txt"
        android:hint="Price (SGD)"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textColorHint="#BCBCBC"
        android:background="@drawable/barbase"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="Create"
        android:id="@+id/create_request_btn"
        android:background="#87CEEB"
        android:layout_marginTop="330dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>


</RelativeLayout>
