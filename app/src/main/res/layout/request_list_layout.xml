<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="?android:attr/selectableItemBackground"

        android:clickable="true"
        android:padding="16dp">

        <TextView
            android:id="@+id/request_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingBottom="8dp"

            android:text="Product Name"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/request_requirement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/request_title"
            android:text="fulfilled by"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginRight="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@id/divider" />
        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/colorGray"
            android:layout_marginEnd="108dp"
            android:id="@+id/divider"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:id="@+id/confirm_received_button"
            android:src="@drawable/ic_done_black_36dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="64dp"
            android:layout_centerVertical="true"
            android:tint="@color/colorDarkGray"
            android:background="?selectableItemBackgroundBorderless" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/colorGray"
            android:layout_marginEnd="48dp"
            android:id="@+id/divider2"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:id="@+id/chat_button"
            android:src="@drawable/ic_chat_black_36dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="4dp"
            android:layout_centerVertical="true"
            android:tint="@color/colorDarkGray"
            android:background="?selectableItemBackgroundBorderless" />
        <!--<Button-->
