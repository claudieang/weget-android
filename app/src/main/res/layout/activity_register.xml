<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wegot.fuyan.fyp.RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_gravity="center"
        android:id="@+id/profile_image">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/profile_pic_iv"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="265dp"
        android:layout_gravity="center"
        android:id="@+id/profile_text"
        android:layout_below="@+id/profile_image"
        >

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:hint=" Enter Name"
            android:drawableLeft="@drawable/ic_account"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:lines="1"
            android:focusable="true"
            android:textColorHighlight="#ff7eff15"
            android:textColorHint="#BCBCBC"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:id="@+id/password"
            android:layout_below="@+id/username"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/username"
            android:layout_alignEnd="@+id/username"
            android:textColorHint="#BCBCBC"
            android:hint=" Password"
            android:drawableLeft="@drawable/ic_tick"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:lines="1"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:id="@+id/Cpassword"
            android:layout_below="@+id/password"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/password"
            android:layout_alignEnd="@+id/password"
            android:textColorHint="#BCBCBC"
            android:hint=" Confirm Password"
            android:drawableLeft="@drawable/ic_double_tick"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:lines="1"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:id="@+id/contact_num"
            android:hint=" Contact Number"
            android:drawableLeft="@drawable/ic_phone"
            android:layout_below="@+id/Cpassword"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/password"
            android:layout_alignEnd="@+id/password"
            android:textColorHint="#BCBCBC"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:lines="1"/>


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:id="@+id/email"
            android:hint=" Email"
            android:drawableLeft="@drawable/ic_email"
            android:layout_below="@+id/contact_num"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/password"
            android:layout_alignEnd="@+id/password"
            android:textColorHint="#BCBCBC"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:lines="1"/>






    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#87CEEB"
        android:text="Register"
        android:id="@+id/button5"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginStart="30dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/centerPoint" />

    <TextView
        android:id="@+id/centerPoint"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#87CEEB"
        android:text="Cancel"
        android:id="@+id/button6"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/centerPoint" />


</RelativeLayout>
