<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipeContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:context="com.wegot.fuyan.fyp.MyRequestActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/mainrequestbg"
            android:id="@+id/relativeLayout1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Requests"
                android:textSize = "30dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/my_request_title"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:background="#FFFFFF"
            android:id="@+id/relativeLayout2"
            android:layout_below="@+id/relativeLayout1">
            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/my_request_list"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/bt_very_light_gray"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/homepage"
                android:layout_marginStart="22dp"
                android:background="@drawable/ic_home_black_24dp"
                android:layout_alignTop="@+id/request"
                android:layout_alignParentStart="true" />

            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/request"
                android:background="@drawable/ic_shopping_basket_black_24dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/homepage"
                android:layout_marginStart="55dp" />

            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/addrequest"
                android:background="@drawable/ic_loupe_black_24dp"
                android:layout_alignTop="@+id/request"
                android:layout_centerHorizontal="true" />
            <!--android:layout_centerHorizontal="true"-->



            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/fulfill"
                android:background="@drawable/ic_directions_run_black_24dp"
                android:layout_marginEnd="51dp"
                android:layout_alignTop="@+id/addrequest"
                android:layout_toStartOf="@+id/imageButton3" />

            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/imageButton3"

                android:background="@drawable/ic_chat_black_24dp"
                android:layout_alignTop="@+id/fulfill"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="25dp" />
            <!--android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"-->

        </RelativeLayout>
    </RelativeLayout>
</android.support.v4.widget.SwipeRefreshLayout>