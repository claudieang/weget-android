<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar_blank"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp">

        <ImageView
            android:id="@+id/pic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@drawable/active_request"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Active Request"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_below="@+id/pic"
            android:paddingBottom="5dp"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/bt_very_light_gray"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:drawableLeft="@drawable/product"
                android:drawablePadding="8dp"
                android:textSize="18sp"
                android:id="@+id/product_name"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:id="@+id/product_description"
                android:layout_below="@+id/product_name"
                android:textColor="@color/darkGray"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="44dp"
                android:layout_weight="1"
                android:textStyle="italic" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray"
                android:id="@+id/divider"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear2"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Requested by"
                android:textSize="18sp"
                android:drawableLeft="@drawable/face_icon"
                android:gravity="center_vertical"
                android:id="@+id/requestor_tv"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"
                android:drawablePadding="8dp"
                android:textColor="@color/black"
                android:layout_weight="1" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray"
                android:id="@+id/divider1"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear3"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Collection Address"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/my_location"
                android:id="@+id/address"
                android:layout_marginTop="2dp"
                android:drawablePadding="8dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:textColor="@color/black"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray"
                android:id="@+id/divider2"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear4"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expiry Time"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/timer"
                android:id="@+id/expirytime"
                android:layout_marginTop="2dp"
                android:drawablePadding="8dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:textColor="@color/black"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray"
                android:id="@+id/divider3"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear5"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:id="@+id/price"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/money"
                android:layout_marginTop="2dp"
                android:drawablePadding="8dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:textColor="@color/black"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear7"
        android:layout_below="@+id/linear6"
        android:layout_alignParentStart="true"
        android:layout_weight="0.1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Accept"
            android:textSize="16sp"
            android:id="@+id/accept_button"
            android:textColor="@color/white"
            android:fontFamily="normal"
            android:foreground="?android:selectableItemBackground"
            android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:typeface="normal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Chat"
            android:textSize="16sp"
            android:id="@+id/chat_button"
            android:fontFamily="normal"
            android:textColor="@color/white"
            android:foreground="?android:selectableItemBackground"
            android:background="@color/colorPrimaryDark"
            android:layout_weight="1"
            android:typeface="normal" />
    </LinearLayout>
</LinearLayout>






