<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8e8e8"

    tools:context="com.weget.fuyan.fyp.ProfileActivity">

    <RelativeLayout
        android:id="@+id/profile_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/request_fulfiller_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/request_fulfiller_image"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/request_fulfiller_image"
            android:text="username"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/emailicon"
            android:layout_width="16dp"
            android:layout_height="14dp"
            android:layout_alignStart="@+id/request_fulfiller_name"
            android:layout_below="@+id/request_fulfiller_name"
            android:layout_marginTop="10dp"
            android:background="@drawable/mail" />


        <TextView
            android:id="@+id/request_fulfiller_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_alignTop="@+id/emailicon"
            android:layout_toEndOf="@+id/emailicon" />

        <TextView
            android:id="@+id/request_fulfiller_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/request_fulfiller_email"
            android:layout_below="@+id/request_fulfiller_email"
            android:layout_marginTop="8dp"
            android:text="contact"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/contacticon"
            android:layout_width="16dp"
            android:layout_height="14dp"
            android:layout_alignBottom="@+id/request_fulfiller_contact"
            android:layout_alignStart="@+id/emailicon"
            android:background="@drawable/contact" />

        <ImageView
            android:id="@+id/request_fulfiller_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:layout_marginBottom="20dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_section"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/rating_section">

        <TextView
            android:id="@+id/rating_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="As a Requestor Rating"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar1"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/rating_text"
            android:layout_centerHorizontal="true"
            android:isIndicator="true"
            android:theme="@style/RatingBar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/requestor_rating_value"
            android:layout_below="@+id/ratingBar1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="16sp"
            android:textColor="@color/red"/>

        <TextView
            android:id="@+id/rating_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/requestor_rating_value"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="AS a Fulfiller Rating"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar2"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/rating_text2"
            android:layout_centerHorizontal="true"
            android:isIndicator="true"
            android:theme="@style/RatingBar2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fulfiller_rating_value"
            android:layout_below="@+id/ratingBar2"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="16sp"
            android:textColor="@color/red"/>

    </RelativeLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/linear4"
        android:weightSum="2">
        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Choose"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:id="@+id/select_fulfiller_btn"
            android:foreground="?android:selectableItemBackground"
            android:fontFamily="normal"
            android:background="@color/colorPrimary"
            android:layout_weight="1" />

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Chat"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:foreground="?android:selectableItemBackground"
            android:fontFamily="normal"
            android:id="@+id/chat_button"
            android:background="@color/colorPrimaryDark"
            android:layout_weight="1" />

    </LinearLayout>

</RelativeLayout>

