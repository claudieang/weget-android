<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bt_very_light_gray"
    tools:context="com.wegot.fuyan.fyp.UpdateContactActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/title"
        android:background="@color/colorPrimary"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update"
            android:textStyle="bold"
            android:textSize="26sp"
            android:id="@+id/title1"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="contact number"
            android:textStyle="bold"
            android:textSize="26sp"
            android:id="@+id/title2"
            android:textColor="@color/white"
            android:layout_below="@id/title1"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/details"
        android:orientation="vertical"
        android:layout_below="@+id/title"
        android:layout_weight="5">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name: "
        android:textSize="20sp"
        android:textColor="@color/black"
        android:id="@+id/update_username"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Number: "
        android:textSize="20sp"
        android:textColor="@color/black"
        android:id="@+id/contact_title"
        android:layout_below="@id/update_username"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"/>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/update_contact_txt"
        android:layout_below="@id/contact_title"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:orientation="vertical"
        android:layout_below="@+id/details"
        android:layout_weight="0.5">
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Update"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/confirm_update_contact_btn"
        />
    </LinearLayout>
    </LinearLayout>

</RelativeLayout>
