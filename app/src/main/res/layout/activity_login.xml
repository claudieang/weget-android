    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/login_text"
        android:inputType="textNoSuggestions"
        android:fontFamily="normal"
        android:drawableLeft="@drawable/ic_perm_identity_black_18dp"
        android:hint=" Username"
        android:textColorHint="#BCBCBC"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:lines="1"
        android:focusable="true"
        android:textColorHighlight="#ff7eff15"
        android:background="@drawable/barbase"
        android:paddingLeft="10dp"
        android:drawablePadding="5dp"
        android:textColor="@color/colorPrimaryDark"
        android:typeface="normal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="8dp"
        android:layout_above="@+id/password_text"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:fontFamily="normal"
        android:drawableLeft="@drawable/ic_lock_outline_black_18dp"
        android:ems="10"
        android:id="@+id/password_text"
        android:hint=" Password"
        android:textColorHint="#BCBCBC"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:lines="1"
        android:background="@drawable/barbase"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="10dp"
        android:drawablePadding="5dp"
        android:textColor="@color/colorPrimaryDark"
        android:typeface="normal"
        android:layout_above="@+id/login_button"
        android:layout_marginBottom="16dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="Log In"
        android:id="@+id/login_button"
        android:background="@color/colorPrimary"
        android:layout_above="@+id/register_button"
        android:layout_alignEnd="@id/password_text"
        android:layout_alignStart="@id/password_text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="Sign up"
        android:id="@+id/register_button"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:layout_above="@+id/forgetPassword"
        android:layout_alignEnd="@id/password_text"
        android:layout_alignStart="@id/password_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:id="@+id/forgetPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        android:textStyle="italic"
        android:layout_alignParentBottom="true"
        android:textColor="@color/colorPrimaryDark" />

</RelativeLayout>
