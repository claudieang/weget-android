<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wegot.fuyan.fyp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="21" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <permission
        android:name="com.example.gcm.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.example.gcm.permission.C2D_MESSAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".LoginActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".UpdateProfileActivity" />
        <activity android:name=".UpdatePasswordActivity" />
        <activity android:name=".UpdateEmailActivity" />
        <activity android:name=".UpdateContactActivity" />
        <activity android:name=".UploadImageActivity" />
        <activity
            android:name=".CreateRequestActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".RequestDetailsActivity" />
        <activity android:name=".MyRequestActivity">
            <intent-filter>
                <action android:name="request_page" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".MyRequestFulfillerActivity" android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".RequestFulfillerDetailsActivity" />
        <activity android:name=".PaymentActivity" />
        <activity android:name=".MyFulfillActivity">
            <intent-filter>
                <action android:name="fulfill_page" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".MyFulfillRequestDetailsActivity" />
        <activity android:name=".UpdateRequestActivity" />
        <!--
     <activity android:name=".MainPage"></activity> ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <service android:name=".MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <!-- [END firebase_service] -->
        <!-- [START firebase_iid_service] -->
        <service android:name=".MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".ForgotPasswordActivity" />
        <activity android:name=".RequesterViewDetails" />
        <activity android:name=".FulfillviewRequestDetails" />
        <activity android:name=".MyfulfillDetails"></activity>
        <activity android:name=".ChatActivity"/>
        <activity android:name=".UserChatActivity"/>
    </application>

</manifest>